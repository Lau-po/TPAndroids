<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstPage"
    android:id="@+id/TP1">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nom"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:hint="@string/prompt_nom" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/nom"
        android:layout_alignParentEnd="true"
        android:onClick="doOk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bienvenue"
        android:id="@+id/message"
        android:layout_below="@+id/nom"
        android:layout_alignStart="@+id/nom"
        android:layout_marginTop="37dp"
        android:textColor="@color/Red" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init"
        android:id="@+id/init"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="doInit" />

</RelativeLayout>
