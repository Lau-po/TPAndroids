<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/Title" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:gravity="top|center_horizontal"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:id="@+id/convert"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etEntry"
        android:layout_alignBottom="@+id/convert"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_toStartOf="@+id/spEntry" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/spEntry"
        android:layout_alignBottom="@+id/etEntry"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="0"
        android:id="@+id/tvresult"
        android:layout_below="@+id/convert"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etEntry"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="35dp"
        android:gravity="left|center_vertical" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/spOut"
        android:layout_alignTop="@+id/tvresult"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
